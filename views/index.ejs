<%- include("partials/header.ejs") %>
<main>
  <h1 class="text-center text-5xl">Business Name Generator</h1>
  <p class="py-6 text-center">Select a category and generate creative names</p>

  <div class="flex container flex-col justify-center m-auto">


    <!-- Category Grid -->
    <div class="grid grid-rows-3 grid-cols-1 sm:grid-cols-2 md:grid-cols-3  gap-12 m-auto ">
      <!-- Category Card -->
      <% categories.forEach(category => { %>
  <div class="card bg-base-200 w-96 shadow cursor-pointer overflow-hidden ">
    
    <!-- Images -->
    <figure class="hover-gallery">
      <% category.images.forEach(img => { %>
        <img class="h-60 w-full object-cover" src="<%= img %>" alt="<%= category.title %> image" />
        <% }) %>
      </figure>
      <!-- Card Title -->     
      <h2 class="card-title text-lg flex justify-center "><%= category.title %></h2>
    <!-- Badges -->
    <div class="flex animate-marquee gap-4 ">
      <% for(let i=0;i<2;i++){ %>
        <% category.badges.forEach(badge => { %>
          <div class="badge badge-soft badge-info text-xs text-slate-400 py-6 px-4">
            <%= badge %>
          </div>
        <% }) %>
      <% } %>
    </div>


  </div>
<% }) %>
    </div>


  </div>
</main>

<%- include("partials/footer.ejs") %>
